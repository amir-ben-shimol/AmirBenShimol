{
	"name": "amir-ben-shimol",
	"description": "Amir Ben Shimol Website",
	"version": "1.0.0",
	"license": "UNLICENSED",
	"private": true,
	"author": "Amir Ben Shimol <amir.benshi@gmail.com> (https://amirbenshimol.io)",
	"scripts": {
		"husky:install": "husky",
		"git:config": "git config --local include.path ../.gitconfig",
		"setdev": "run-p husky:install git:config",
		"prepare": "is-ci || is-docker || pnpm setdev",
		"build": "dotenv -e envs/.env.production -- next build",
		"start": "dotenv -e envs/.env.production -- next start -p 8080",
		"start:dev": "dotenv -e envs/.env.development -- next dev -p 8080",
		"start:prod": "next start -p 8080",
		"type-check": "tsc --project ./tsconfig.json",
		"knip": "knip -c ./knip.json",
		"prettier": "prettier --check **/*.{ts,js,cjs,json,yaml}"
	},
	"dependencies": {
		"@radix-ui/react-hover-card": "1.1.1",
		"@tailwindcss/typography": "0.5.14",
		"clsx": "2.1.1",
		"framer-motion": "11.2.9",
		"next": "14.2.3",
		"next-themes": "0.3.0",
		"nextjs-toploader": "1.6.12",
		"qss": "3.0.0",
		"react": "18.3.1",
		"react-markdown": "9.0.1",
		"remark": "15.0.1",
		"remark-gfm": "4.0.0",
		"swr": "2.2.5",
		"tailwind-merge": "2.3.0",
		"tailwindcss-animate": "1.0.7"
	},
	"devDependencies": {
		"@commitlint/cli": "19.3.0",
		"@types/node": "20.12.13",
		"@types/react": "18.3.3",
		"@types/react-dom": "18.3.0",
		"autoprefixer": "10.4.19",
		"commitizen": "4.3.0",
		"commitlint": "19.3.0",
		"cspell": "8.9.1",
		"cz-vinyl": "2.5.1",
		"dotenv-cli": "7.4.2",
		"husky": "9.0.11",
		"hygen": "6.2.11",
		"is-ci": "3.0.1",
		"is-docker": "3.0.0",
		"knip": "5.23.1",
		"lint-staged": "15.2.7",
		"npm-run-all2": "6.2.0",
		"postcss": "8.4.38",
		"postcss-import": "16.0.1",
		"postcss-nesting": "12.1.5",
		"prettier": "3.3.2",
		"prettier-plugin-tailwindcss": "0.6.5",
		"tailwindcss": "3.4.3",
		"typescript": "5.4.5"
	},
	"packageManager": "pnpm@9.6.0",
	"engines": {
		"npm": "please-use-pnpm",
		"yarn": "please-use-pnpm",
		"pnpm": ">=9",
		"node": ">=20"
	}
}
